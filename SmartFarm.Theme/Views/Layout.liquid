<!DOCTYPE html>
<html lang="{{ Culture.Name }}">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% page_title Site.SiteName, position: "after", separator: " | " %}</title>


    <link rel="icon" type="image/png" href="{{ 'SmartFarm.Theme/images/favicon.png' | shape_new_url }}">
    

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Open+Sans:wght@400;500&display=swap" rel="stylesheet">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="{{ 'SmartFarm.Theme/css/styles.css' | shape_new_url }}" rel="stylesheet" asp-append-version="true" />
    
    {% resources type: "Meta" %}
    {% resources type: "HeadLink" %}
    {% resources type: "HeadScript" %}
    {% resources type: "Stylesheet" %}
</head>
<body>

    <div class="top-bar bg-success text-white py-2">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <span class="me-3"><i class="fas fa-phone-alt me-2"></i> +33 1 23 45 67 89</span>
                <span><i class="fas fa-envelope me-2"></i> contact@smartfarm.com</span>
            </div>
            <div class="social-icons">
                <a href="#" class="text-white me-2"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white me-2"><i class="fab fa-instagram"></i></a>
                <a href="#" class="text-white"><i class="fab fa-twitter"></i></a>
            </div>
        </div>
    </div>

    <header class="main-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="{{ 'SmartFarm.Theme/images/logo.jpg' | shape_new_url }}" alt="{{ Site.SiteName }}" height="60" onerror="this.src='https://via.placeholder.com/60x60?text=Logo'; this.onerror='';">
                    <span class="ms-2 fw-bold text-success">{{ Site.SiteName }}</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link {% if Request.Path == '/home' %}active{% endif %}" href="/home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if Request.Path contains '/about' %}active{% endif %}" href="/about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if Request.Path contains '/champ' %}active{% endif %}" href="/champ">Fields</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if Request.Path contains '/contact' %}active{% endif %}" href="/contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    {% if Request.Path == '/' %}
    <section class="hero-section position-relative">
        <div class="hero-slider">
            <div class="hero-slide" style="background-image: url('{{ 'SmartFarm.Theme/images/hero-1.jpg' | shape_new_url }}');">
                <div class="container h-100">
                    <div class="row h-100 align-items-center">
                        <div class="col-lg-6">
                            <div class="hero-content bg-white bg-opacity-75 p-4 rounded">
                                <h1 class="display-4 fw-bold text-success mb-3">Bienvenue à la Ferme</h1>
                                <p class="lead mb-4">Découvrez nos produits frais et notre élevage de qualité</p>
                                <a href="/champ" class="btn btn-success btn-lg">Voir nos champs</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-overlay"></div>
    </section>
    {% endif %}

    {% if Request.Path != '/' %}
    <div class="page-title-section py-4 bg-light">
        <div class="container">
            <h1 class="h2 mb-0">{{ Page.Title }}</h1>
        </div>
    </div>
    {% endif %}

    <main class="main-content py-5">
        <div class="container">
            {% render_body %}
        </div>
    </main>

    {% if Request.Path == '/' %}
    <section class="features-section py-5 bg-light">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card text-center p-4 bg-white rounded shadow-sm h-100">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-leaf fa-3x text-success"></i>
                        </div>
                        <h3 class="h4 mb-3">Agriculture Durable</h3>
                        <p class="mb-0">Nous pratiquons une agriculture respectueuse de l'environnement pour préserver nos terres.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center p-4 bg-white rounded shadow-sm h-100">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-cow fa-3x text-success"></i>
                        </div>
                        <h3 class="h4 mb-3">Élevage Responsable</h3>
                        <p class="mb-0">Nos vaches sont élevées dans le respect du bien-être animal et de la nature.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card text-center p-4 bg-white rounded shadow-sm h-100">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-seedling fa-3x text-success"></i>
                        </div>
                        <h3 class="h4 mb-3">Produits de Qualité</h3>
                        <p class="mb-0">Nous vous proposons des produits frais, locaux et de saison pour une alimentation saine.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="cta-section py-5" style="background-image: url('{{ 'SmartFarm.Theme/images/cta-bg.jpg' | shape_new_url }}'); background-size: cover; background-position: center;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <div class="cta-content bg-white bg-opacity-90 p-5 rounded">
                        <h2 class="mb-4">Venez visiter notre ferme</h2>
                        <p class="lead mb-4">Découvrez notre exploitation, nos animaux et nos méthodes de travail lors d'une visite guidée.</p>
                        <a href="/contact" class="btn btn-success btn-lg">Nous contacter</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endif %}

    <footer class="footer bg-dark text-white pt-5 pb-3">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <div class="footer-about">
                        <h5 class="text-white mb-4">À propos de nous</h5>
                        <p>SmartFarm est une exploitation agricole familiale spécialisée dans l'élevage bovin et la culture de champs. Nous sommes engagés dans une démarche d'agriculture durable et responsable.</p>
                        <div class="footer-social mt-4">
                            <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="text-white"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="footer-links">
                        <h5 class="text-white mb-4">Liens rapides</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2"><a href="/" class="text-white-50 text-decoration-none hover-white">Accueil</a></li>
                            <li class="mb-2"><a href="/about" class="text-white-50 text-decoration-none hover-white">À propos</a></li>
                            <li class="mb-2"><a href="/champ" class="text-white-50 text-decoration-none hover-white">Nos champs</a></li>
                            <li class="mb-2"><a href="/contact" class="text-white-50 text-decoration-none hover-white">Contact</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="footer-contact">
                        <h5 class="text-white mb-4">Contactez-nous</h5>
                        <p class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> 123 Chemin des Champs, 75000 Paris</p>
                        <p class="mb-2"><i class="fas fa-phone-alt me-2"></i> +33 1 23 45 67 89</p>
                        <p class="mb-2"><i class="fas fa-envelope me-2"></i> contact@smartfarm.com</p>
                        <p><i class="fas fa-clock me-2"></i> Lun - Sam: 8h00 - 18h00</p>
                    </div>
                </div>
            </div>
            <hr class="mt-4 mb-3 border-secondary">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; {{ "now" | date: "%Y" }} {{ Site.SiteName }}. Tous droits réservés.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Conçu avec <i class="fas fa-heart text-danger"></i> par SmartFarm</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <a href="#" class="back-to-top btn btn-success position-fixed bottom-0 end-0 m-4" style="display: none;">
        <i class="fas fa-arrow-up"></i>
    </a>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Theme JS -->
    <script src="{{ 'SmartFarm.Theme/js/scripts.js' | shape_new_url }}"></script>
    
    <!-- Resources -->
    {% resources type: "FootScript" %}
</body>
</html>